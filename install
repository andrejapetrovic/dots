#!/bin/sh

[ -d "$HOME/.config" ] ||  mkdir -p $HOME/.config;
[ -f "$HOME/.cache/dmenu-web-history" ] || touch $HOME/.cache/dmenu-web-history

cp $PWD/.zshrc $HOME
cp $PWD/.zprofile $HOME
#cp $PWD/.xinitrc $HOME
#cp $PWD/.gtkrc-2.0 $HOME
#cp $PWD/.cfgignore $HOME
#cp -r $PWD/.config/bspwm $HOME/.config/
cp -r $PWD/.config/sxhkd $HOME/.config/
cp -r $PWD/.config/polybar $HOME/.config/
#cp -r $PWD/.config/picom $HOME/.config/
cp -r $PWD/.config/vifm $HOME/.config/
#cp -r $PWD/.config/gtk-3.0 $HOME/.config/
#cp -r $PWD/.config/fontconfig $HOME/.config/
cp -r $PWD/.config/nvim $HOME/.config/
cp -r $PWD/.tmux.conf $HOME
cp -r $PWD/.config/sway $HOME/.config/
cp -r $PWD/.config/waybar $HOME/.config/


