#
# wm independent hotkeys


# terminal emulator
super + {Return, ctrl + m}
	st 

super + ctrl + n
	bspc node -p south; \
	bspc node -o 0.7; \
	st

# program launcher
super + space
	dmenu_run -p "run" 

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super + alt + p
	killall polybar; \
	polybar example &

super + {shift + c, c, v, ctrl + q, shift + x, x, ctrl + x}
	$HOME/Scripts/{docs,web-search,cfg,shutdown,proj,search-scr,win-switch}

super + {a, shift + a, e, shift + e}
	{firefox, chromium, st -e $HOME/.config/vifm/scripts/vifmrun &, pcmanfm} 

Print
	maim | xclip -selection clipboard -t image/png

super + shift + s
	maim -s | xclip -selection clipboard -t image/png

super + Print
	maim $HOME/Pictures/Screenshots/$(date +%s).png

super + shift + Print
	maim -s $HOME/Pictures/Screenshots/$(date +%s).png

super + z 
	$HOME/Scripts/save-scr

super + {backslash, semicolon, apostrophe}
	playerctl --player=deezer {play-pause, previous, next}

super + shift + z
	slock

{_,shift + }XF86Audio{Raise,Lower}Volume
	amixer set Master playback {1+,10+,1-,10-}

XF86AudioMute
	amixer set Master toggle

XF86MonBrightness{Down,Up}
	xbacklight {-dec 10, -inc 10}


# quit/restart bspwm
super + q; {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + } d 
	bspc node -f {next,prev}.local
# focus the next/previous desktop in the current monitor
super + {_,shift + } bracketleft 
	bspc desktop -f {next,prev}.local

# focus the lrst node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}' --follow

super + alt + {1-9,0}
	bspc node -d '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + r; {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + r; {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + r; w
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + r; q
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 10 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -10 0,top 0 10,bottom 0 -10,left 10 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# move window to a node
alt + shift + {h,j,k,l}
	bspc node -n {west,south,north,east}

# replace focused node with selected workspace
super + ctrl + {1-9,0} 
	bspc query -N -d '^{1-9,10}' | xargs bspc node -s
	#bspc node -s $(bspc query -N -d {X, XI, VIII, VII, VI})

# pull windows from workspace
super + shift + ctrl + {1-9,0} 
	bspc node $(bspc query -N -d '^{1-9,10}' | head -n 1) -d $(bspc query -D -d) --focus 

